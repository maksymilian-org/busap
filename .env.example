# Database
DATABASE_URL=postgresql://busap:busap_secret@localhost:5432/busap?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# API
API_PORT=3001
API_HOST=0.0.0.0

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Storage (local fallback)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Cloudflare R2 Storage (optional - if set, R2 is used instead of local filesystem)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=busap-storage
R2_PUBLIC_URL=

# SMTP (use Mailpit for dev: docker run -p 1025:1025 -p 8025:8025 axllent/mailpit)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
MAIL_FROM=Busap <noreply@busap.pl>

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Web
NEXT_PUBLIC_API_URL=http://localhost:3001

# Mobile
EXPO_PUBLIC_API_URL=http://localhost:3001

# Environment
NODE_ENV=development
